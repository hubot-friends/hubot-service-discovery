{
  "name": "@hubot-friends/hubot-service-discovery",
  "version": "1.1.2",
  "description": "A Hubot script and adapter providing service discovery capabilities over WebSocket for distributed Hubot instances with horizontal scaling support",
  "main": "index.mjs",
  "type": "module",
  "exports": {
    ".": "./index.mjs",
    "./DiscoveryService.mjs": "./DiscoveryService.mjs",
    "./DiscoveryServiceAdapter.mjs": "./DiscoveryServiceAdapter.mjs",
    "./lib/DiscoveryServiceClient.mjs": "./lib/DiscoveryServiceClient.mjs",
    "./lib/EventStore.mjs": "./lib/EventStore.mjs",
    "./lib/LoadBalancer.mjs": "./lib/LoadBalancer.mjs",
    "./lib/ServiceRegistry.mjs": "./lib/ServiceRegistry.mjs"
  },
  "files": [
    "index.mjs",
    "DiscoveryService.mjs",
    "DiscoveryServiceAdapter.mjs",
    "lib/",
    "README.md"
  ],
  "scripts": {
    "test": "node --test --test-timeout=10000 test/**/*.test.mjs",
    "test:watch": "node --test --watch --test-timeout=10000 test/**/*.test.mjs",
    "test:coverage": "node --test --experimental-test-coverage --test-timeout=10000 test/**/*.test.mjs",
    "start": "HUBOT_ALLOWED_ORIGINS='http://localhost:8080,http://localhost:3001' hubot -n Hubot",
    "start-client": "HUBOT_DISCOVERY_URL='ws://localhost:8080' HUBOT_SERVICE_NAME=hubot HUBOT_INSTANCE_ID=client-1 node --watch local-client.mjs",
    "generate-token": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\""
  },
  "keywords": [
    "hubot",
    "service-discovery",
    "script",
    "adapter",
    "distributed",
    "event-sourcing",
    "horizontal-scaling",
    "load-balancing",
    "websocket"
  ],
  "author": "Joey Guerra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hubot-friends/hubot-service-discovery"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "peerDependencies": {
    "hubot": ">=14"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "release": {
    "branches": [
      "main"
    ],
    "dryRun": false
  },
  "publishConfig": {
    "access": "public"
  }
}
